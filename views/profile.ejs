<!doctype html>
<html>
<head>
    <title>21 Savage Fan Site</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="style.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.7/css/all.css">
</head>
<body>

  <header class="">
    <div class="page-header text-center">
      <h1 class=''><span class="fas fa-book text-primary"></span>Habit Tracker</h1>
      <a href="/logout" class="btn btn-warning btn-sm ">Logout</a>
    </div>
  </header>

  <main>
    <section class="container  text-left ">
      <section class= 'row'>

        <!-- form -->
        <section class='text-center col-md-6 bg-primary'>
          <h2>Enter Habit</h2>
        
          <% if (user.local.email) { %>
          <form action="/messages" method="POST">
            <!-- <input type="text" value="<%= user.local.email %>" name="name"> -->
            <input type="text" placeholder="habit" name="habit">
            <button type="submit" class="btn btn-success btn-sm">Submit</button>
          </form>
          <% } %>
        </section>

        <!-- checkboxes -->
        <section class='col-md-6 '> 
          <h3 class='text-center'>Daily Habit Log</h3>
            
          <ul class="messages">
            <% for(var i=0; i<messages.length; i++) {%>
            <li class="message">
              <% let color %>
              <% if(messages[i].favorited === true) { %>
              <% color = 'green' %> 
              <% } %> 
              <!-- style = 'color: <%= color%>' -->
              <span style = 'color: <%= color %>'><%= messages[i].habit %></span>
              <span>
                <% for(var d=1; d<=31; d++) {%>
                  <span>day<%=d%><input type= "checkbox" value = 1 ></span>
                <% } %>
              </span>
              <span><i class="fa fa-star" aria-hidden="true"></i></span>
              <span><i class="fa fa-trash" aria-hidden="true"></i></span>
              <p></p>
            </li>
            <% } %>
          </ul>
        </section>
        
      </section>
    </section>
  </main>


      

      

